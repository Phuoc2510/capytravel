<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>capytravel.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>capytravel.controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>capytravel.controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>capytravel.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AirportController</servlet-name>
        <servlet-class>AirportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AirportController</servlet-name>
        <servlet-class>capytravel.controller.AirportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlightsController</servlet-name>
        <servlet-class>capytravel.controller.FlightsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AirlineController</servlet-name>
        <servlet-class>capytravel.controller.AirlineController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingController</servlet-name>
        <servlet-class>capytravel.controller.BookingController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AirportController</servlet-name>
        <url-pattern>/AirportController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightsController</servlet-name>
        <url-pattern>/FlightsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AirlineController</servlet-name>
        <url-pattern>/AirlineController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingController</servlet-name>
        <url-pattern>/BookingController</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>CapyTravelController</welcome-file>
    </welcome-file-list>
</web-app>
